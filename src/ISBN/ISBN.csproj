<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>ISBN</PackageId>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageProjectUrl>https://clarius.org/isbn</PackageProjectUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <Description>An ISBN parsing library</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IsExternalInit" Version="1.0.2" PrivateAssets="all" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Nullable" Version="1.3.1" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="groups.js" />
    <None Include="..\..\readme.md" PackagePath="readme.md" />
    <Compile Remove="Range.cs" Condition="$(TargetFramework) != 'netstandard2.0'" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="groups.js" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
